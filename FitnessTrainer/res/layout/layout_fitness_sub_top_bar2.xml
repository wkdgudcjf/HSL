<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fitness_main_sub_top_bar_layout2"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/fitness_main_sub_top_bar"
    android:orientation="vertical"
    android:weightSum="2" >
	<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="50dp"
		    android:orientation="horizontal"
			android:weightSum="2" >
		    <RelativeLayout
		        android:id="@+id/fitness_main_sub_top_bar_left_layout_top"
		        android:layout_width="0dp"
		        android:layout_height="50dp"
		        android:layout_weight="1"
		        android:background="@color/transparent"
		        android:clickable="true"
		        android:onClick="onClick" >
		
		        <!-- 서브 Top Bar 실시간 심박수 글자 -->
		
		        <TextView
		            android:id="@+id/fitness_main_sub_top_bar_left_textview_top"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:gravity="center"
		            android:background="@color/transparent"
		            android:textColor="@color/main_text_color"
		            android:text="@string/string_fitness_main_graph_donut_progress"
		            android:textSize="15sp" />
		
		        <!-- 서브 Top Bar 실시간 심박수 아래 테두리 -->
		
		        <ImageView
		            android:id="@+id/fitness_main_sub_top_bar_left_border_imageview_top"
		            android:layout_width="722dp"
		            android:layout_height="5.25dp"
		            android:layout_alignParentBottom="true"
		            android:layout_alignParentLeft="true"
		            android:layout_marginRight="0dp"
		            android:layout_marginTop="0dp"
		            android:src="@drawable/fitness_top_sub_bar_white_under_bar" />
		    </RelativeLayout>
		
		    <!-- 서브 Top Bar 그래프 레이아웃 -->
		
		    <RelativeLayout
		        android:id="@+id/fitness_main_sub_top_bar_right_layout_top"
		        android:layout_width="0dp"
		        android:layout_height="50dp"
		        android:layout_weight="1"
		        android:background="@color/transparent"
		        android:clickable="true"
		        android:onClick="onClick" >
		
		        <!-- 서브 Top Bar 그래프 글자 -->
		
		        <TextView
		            android:id="@+id/fitness_main_sub_top_bar_right_textview_top"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:gravity="center"
		            android:background="@color/transparent"
		            android:textColor="@color/main_text_color"
		            android:text="@string/string_fitness_main_graph_line"
		            android:textSize="15sp" />
		
		        <!-- 서브 Top Bar 그래프 아래 테두리 -->
		
		        <ImageView
		            android:id="@+id/fitness_main_sub_top_bar_right_border_imageview_top"
		            android:layout_width="722dp"
		            android:layout_height="5.25dp"
		            android:layout_alignParentBottom="true"
		            android:layout_alignParentRight="true"
		            android:layout_marginRight="0dp"
		            android:layout_marginTop="0dp"
		            android:src="@drawable/fitness_top_sub_bar_white_under_bar"
		            android:visibility="invisible" />
		    </RelativeLayout>
	</LinearLayout>
	<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="50dp"
		    android:orientation="horizontal"
			android:weightSum="2" >
		    <RelativeLayout
		        android:id="@+id/fitness_main_sub_top_bar_left_layout_bottom"
		        android:layout_width="0dp"
		        android:layout_height="50dp"
		        android:layout_weight="1"
		        android:background="@color/transparent"
		        android:clickable="true"
		        android:onClick="onClick" >
		
		        <!-- 서브 Top Bar 실시간 심박수 글자 -->
		
		        <TextView
		            android:id="@+id/fitness_main_sub_top_bar_left_textview_bottom"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:gravity="center"
		            android:background="@color/transparent"
		            android:textColor="@color/main_text_color"
		            android:text="@string/string_fitness_main_graph_donut_progress"
		            android:textSize="15sp" />
		
		        <!-- 서브 Top Bar 실시간 심박수 아래 테두리 -->
		
		        <ImageView
		            android:id="@+id/fitness_main_sub_top_bar_left_border_imageview_bottom"
		            android:layout_width="722dp"
		            android:layout_height="5.25dp"
		            android:layout_alignParentBottom="true"
		            android:layout_alignParentLeft="true"
		            android:layout_marginRight="0dp"
		            android:layout_marginTop="0dp"
		            android:visibility="invisible"
		            android:src="@drawable/fitness_top_sub_bar_white_under_bar" />
		    </RelativeLayout>
		
		    <!-- 서브 Top Bar 그래프 레이아웃 -->
		
		    <RelativeLayout
		        android:id="@+id/fitness_main_sub_top_bar_right_layout_bottom"
		        android:layout_width="0dp"
		        android:layout_height="50dp"
		        android:layout_weight="1"
		        android:background="@color/transparent"
		        android:clickable="true"
		        android:onClick="onClick" >
		
		        <!-- 서브 Top Bar 그래프 글자 -->
		
		        <TextView
		            android:id="@+id/fitness_main_sub_top_bar_right_textview_bottom"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:gravity="center"
		            android:background="@color/transparent"
		            android:textColor="@color/main_text_color"
		            android:text="@string/string_fitness_main_graph_line"
		            android:textSize="15sp" />
		
		        <!-- 서브 Top Bar 그래프 아래 테두리 -->
		
		        <ImageView
		            android:id="@+id/fitness_main_sub_top_bar_right_border_imageview_bottom"
		            android:layout_width="722dp"
		            android:layout_height="5.25dp"
		            android:layout_alignParentBottom="true"
		            android:layout_alignParentRight="true"
		            android:layout_marginRight="0dp"
		            android:layout_marginTop="0dp"
		            android:src="@drawable/fitness_top_sub_bar_white_under_bar"
		            android:visibility="invisible" />
		    </RelativeLayout>
	</LinearLayout>
</LinearLayout>