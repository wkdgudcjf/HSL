<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <!-- 메인 Top Bar -->

    <include layout="@layout/layout_fitness_top_bar" />

    <RelativeLayout
        android:id="@+id/fitness_trainer_user_device_name"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/fitness_top_bar_layout" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1" >

            <TextView
                android:id="@+id/connection_item_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:gravity="center"
                android:textSize="16.25sp" />

            <ImageButton
                android:layout_width="215.50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:background="@color/transparent"
                android:src="@drawable/fitness_register_memeber_automatic_add_text" />
        </LinearLayout>
    </RelativeLayout>

    <!-- 회원 목록 리스트 -->

    <ListView
        android:id="@+id/fitness_trainer_user_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="118.25dp"
        android:layout_marginTop="131.25dp"
        android:background="#F3F3F3" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="98.25dp"
        android:layout_alignParentBottom="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1" >

            <ImageView
                android:layout_width="22.5dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                android:gravity="center"
                android:src="@drawable/fitness_register_memeber_automatic_search" />

            <ImageButton
                android:id="@+id/fitness_trainer_user_register_button"
                android:layout_width="244.50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.7"
                android:background="@color/transparent"
                android:gravity="center"
                android:src="@drawable/fitness_register_memeber_automatic_add_text2" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>