<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="209.0dp"
    android:background="@color/main_background_clolor" >

    <ImageView
        android:id="@+id/fitness_trainer_user_board_photo"
        android:layout_width="89dp"
        android:layout_height="89dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18.25dp"
        android:src="@drawable/fitness_trainer_user_board_photo" />

    <TextView
        android:id="@+id/fitness_trainer_user_board_name"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_below="@id/fitness_trainer_user_board_photo"
        android:layout_centerHorizontal="true"
        android:textColor="@color/trainer_user_board_name"
        android:textSize="16sp"
        android:layout_marginTop="7.5dp" />

    <TextView
        android:id="@+id/fitness_trainer_user_board_birth_height_weight"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_below="@id/fitness_trainer_user_board_name"
        android:textColor="@color/trainer_user_board_birth_height_weight"
        android:layout_centerHorizontal="true"
        android:textSize="14sp"
        android:lineSpacingMultiplier="1.2"
        android:layout_marginTop="9.25dp" />
    
    <TextView
        android:id="@+id/fitness_trainer_user_board_time"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_below="@id/fitness_trainer_user_board_birth_height_weight"
        android:textColor="@color/trainer_user_board_birth_height_weight"
        android:layout_centerHorizontal="true"
        android:textSize="14sp"
        android:lineSpacingMultiplier="1.2"
        android:layout_marginTop="9.25dp" />
</RelativeLayout>